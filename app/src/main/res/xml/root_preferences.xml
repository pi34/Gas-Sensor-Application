<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Device">

        <EditTextPreference
            app:key="device_id"
            app:title="My Device ID"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="device_off"
            app:title="Turn Device Off" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:key="mute"
            app:title="Mute Alarm" />

        <SwitchPreferenceCompat
            app:key="schedule"
            app:title="Do Not Disturb"
            />

        <EditTextPreference
            android:title="Kindly Enter a Valid Time."
            app:key="start_dnd"
            app:title="Starting Time for DND:"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:title="Kindly Enter a Valid Time."
            app:key="end_dnd"
            app:title="Ending Time for DND:"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Emergency Contact">

        <EditTextPreference
            app:key="emergency"
            app:title="My Emergency Contact"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
</PreferenceScreen>